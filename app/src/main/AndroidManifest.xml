<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.learnworderapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_new"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_new_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AddWord"
            android:screenOrientation="portrait"
            android:label="Добавление слова"
            android:parentActivityName=".Dictionary" />
        <activity
            android:name=".Dictionary"
            android:screenOrientation="portrait"
            android:label="Словарь"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".TranslateWords"
            android:screenOrientation="portrait"
            android:label="Учить слова"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>